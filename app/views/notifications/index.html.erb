<div class="bg-dm">
</div>


<div class="common_wrapper">

<h1>おしらせ</h1>
<%= link_to notification_path(@notifications), method: :delete do %>
通知クリア<i class="fas fa-trash fa-lg"></i>
<% end %>
<hr>
<% if @notifications.exists? %>
  <% @notifications.each do |notification| %>
    <div class="notice">
      <tr>
        <td>
          <%= link_to user_path(notification.visitor) do %>
          <% if notification.visitor.picture? %>
            <%= image_tag notification.visitor.picture.url, class:"user-icon_small"%>
            <% else %>
            <%= image_tag "default.jpg", alt: "user-icon",class: "user-icon_small" %>
            <% end %>
            <%= notification.visitor.name %>
          <% end %>
        </td>
        <td>
          さんからフォローされました
        </td>
        <td>
          <%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
        </td>
      </tr>
      <hr>
    </div>

    <div class="notice">
        <%= link_to user_path(notification.visitor) do %>
        <% if notification.visitor.picture? %>
        <%= image_tag notification.visitor.picture.url, class:"user-icon_small"%>
        <% else %>
            <%= image_tag "default.jpg", alt: "user-icon", class: "user-icon_small" %>
            <% end %>
        <%= notification.visitor.name %>
        <% end %>
        さんがあなた(<%= notification.visited.name %>さん)にDMを送りました
        <td>
          <%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
        </td>
        <hr>
    </div>
    
  <% end %>
  <hr>
<% else %>
  <p>おしらせはありません</p>
<% end %>

</div>
