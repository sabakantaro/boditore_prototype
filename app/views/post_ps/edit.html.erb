<h1>PostPs#edit</h1>
<span>現在ログイン中のユーザー：<%= current_user.name %></span>
<%= form_for(@post_p, url: post_p_path(@post_p)) do |f| %>
    <div>
        <%= f.label :中身 %><br>
        <%= f.text_area :content, :placeholder =>"#{@post_p.content}" %>
    </div>
    <div><%= f.submit "更新する" %></div>
<% end %>