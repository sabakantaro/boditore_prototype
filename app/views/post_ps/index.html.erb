<h1>投稿一覧</h1>
<!--post_ps.とeachの間にtag_list.をいれたい-->
<% @post_ps.each do |tag| %>
  <span style="background-color: #e9e9e9; border-radius: 5px;"><%= tag %></span>
<% end %>
<% @post_ps.each do |post_p| %>
  <div class="post_ps-index-item">
    <%= link_to post_p.content, "/post_ps/show" %>
  </div>
<% end %>
<%= link_to"新規投稿", "/post_ps/new" %>
<%= link_to"投稿編集", "/post_ps/1/edit" %>
<%= link_to"投稿削除", post_p_path(1), method: :delete %>