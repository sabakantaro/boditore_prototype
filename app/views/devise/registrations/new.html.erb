<div class="container mx-auto lg:px-8 xl:px-80">
  <div class="m-4 p-4 h-auto divide-y divide-gray-400 bg-white rounded-md shadow">
    <h2>新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="px-4 pb-4 pt-4">
      <%= f.label :名前 %> <br />
      <%= f.text_field :name , autocomplete: "name", class:'placeholder-gray-800 border w-full' %>
    </div>

    <div class="px-4 pb-4">
      <%= f.label :プロフィール %> <br />
      <%= f.text_area :profile , autocomplete: "profile", class:'placeholder-gray-800 border w-full' %>
    </div>

    <div class="px-4 pb-4">
      <%= f.label :トレーニング歴 %> <br />
      <%= f.number_field :experience, autocomplete: "off", min: 0, max: 100 %>年
    </div>
    
    <div class="px-4 pb-4">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'placeholder-gray-800 border w-full' %>
    </div>

    <div class="px-4 pb-4">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:'placeholder-gray-800 border w-full' %>
    </div>

    <div class="px-4 pb-4">
      <%= f.label :パスワード再確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'placeholder-gray-800 border w-full' %>
    </div>

    <div>
      <p>※プロフィール編集からプロフィール画像を設定できます</p><br />
    </div>
    
    <div class="py-4 flex justify-center">
      <%= f.submit "登録" ,class:'cursor-pointer px-3 py-2 bg-gray-500 text-white font-semibold rounded hover:bg-gray-700'%>
    </div>
    <% end %>
  </div>
</div>
