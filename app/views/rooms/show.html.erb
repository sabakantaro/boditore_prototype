<div class="bg-dm">
</div>

<div class="notifications">

<h1>トークルーム</h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
  <h5><strong><a href="/users/<%= e.user.id %>"><%= e.user.name%>さん</a></strong></h5>
<% end %>

<hr>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <% if m.user_id == current_user.id %>
      <div class="current_user">
      <strong class="current_user"><%= m.content %></strong>
      <small>by <a href="/users/<%= m.user_id %>"><%= m.user.name %>さん</a></small>
      </div>
    <% else %>
      <div class="visited_user">
      <strong class="visited_user"><%= m.content %></strong>
      <small>by <a href="/users/<%= m.user_id %>"><%= m.user.name %>さん</a></small>
      </div>
    <% end %>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>
<hr>



<%= link_to "登録者一覧に戻る", users_path %>

</div>

<div class="room-show__form">
  <div class="room-show__form__box">
    <%= form_for @message do |f| %>
      <%= f.text_field :content, :placeholder => "メッセージを入力して下さい", id: "content" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>