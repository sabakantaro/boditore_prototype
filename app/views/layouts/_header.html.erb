<header>
  <div  id='header' class="h-14 w-full bg-gray-300 flex justify-between place-items-center">

    <div class="h-full w-48 ml-8 flex place-items-center">
      <%= link_to root_path,data: {"turbolinks"=>false} do %>
      <h3 class="w-24 md:w-36">Boditore
      <i class="fas fa-dumbbell"></i>
      </h3>
      <% end %>
    </div>

    <div class="h-14 hidden md:block">
      <div class="h-full w-120 md:mr-8 lg:mr-14 flex place-items-center space-x-reverse space-x-2 sm:space-x-4 md:space-x-6 lg:space-x-8 xl:space-x-12">
          <% if user_signed_in? %>
            <div class="w-1/4 header_link">
              <%= link_to  users_path do %>
              <i class="fas fa-users fa-lg"></i>
              <% end %>
            </div>
            <div class="w-1/4 header_link">
              <%= link_to  posts_path do %>
              <i class="fas fa-list fa-lg"></i>
              <% end %>
            </div>
            <div class="w-1/4 header_link">
              <%= link_to  notifications_path do %>
              <i class="fas fa-bell fa-lg"></i>
              <% end %>
            </div>
            <div class="w-1/4 header_link">
              <%= link_to  current_user do %>
              <i class="far fa-user-circle fa-lg"></i>
              <% end %>
            </div>

          <% else %>
            
            <div class="w-1/4 header_link">
              <%= link_to  new_user_registration_path do %>
              <span class="text-base truncate">新規登録</span>
              <% end %>
            </div>
            <div class="w-1/4 header_link">
              <%= link_to  new_user_session_path do %>
              <span class="text-base truncate">ログイン</span>
              <% end %>
            </div>
            <div class="w-1/4 header_link">
              <%= link_to  users_guest_sign_in_path, method: :post do %>
              <span class="text-base truncate">ゲストログイン</span>
              <% end %>
            </div>
            
          <% end %>
            
        </div>
      </div>

    <div  id='menu-bar' class='w-14 hover:bg-gray-400 mx-2 md:mx-6 px-4 flex flex-col relative block md:hidden'>
      <div  class='h-14 flex place-items-center justify-center'>
        <%= image_tag 'menu_icon.png', class: 'h-2/5' %>
        <div id='menu-list' class='absolute top-14 right-0 hidden z-40'>
          <ul class='bg-white border-2 border-gray-700 divide-y-2 divide-gray-700 '>
          <% if user_signed_in? %>
            <li class='menu_item h-full w-36 flex place-items-center justify-center'>
              <%= link_to  users_path do %>
              <i class="fas fa-users fa-lg"></i>ユーザーリスト
              <% end %>
            </li>
            <li class='menu_item h-full w-36 flex place-items-center justify-center'>
              <%= link_to  posts_path do %>
              <i class="fas fa-list fa-lg"></i>投稿リスト
              <% end %>
            </li>
            <li class='menu_item h-full w-36 flex place-items-center justify-center'>
              <%= link_to  notifications_path do %>
              <i class="fas fa-bell fa-lg"></i>おしらせ
              <% end %>
            </li>
            <li class='menu_item h-full w-36 flex place-items-center justify-center'>
              <%= link_to  current_user do %>
              <i class="far fa-user-circle fa-lg"></i>プロフィール
              <% end %>
            </li>
          <% else%>
            <li class='menu_item h-full w-36 flex place-items-center justify-center'>
              <%= link_to  new_user_registration_path do %>
              <span class="text-base truncate">新規登録</span>
              <% end %>
            </li>
            <li class='menu_item h-full w-36 flex place-items-center justify-center'>
              <%= link_to  new_user_session_path do %>
              <span class="text-base truncate">ログイン</span>
              <% end %>
            </li>
            <li class='menu_item h-full w-36 flex place-items-center justify-center'>
              <%= link_to  users_guest_sign_in_path, method: :post do %>
              <span class="text-base truncate">ゲストログイン</span>
              <% end %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>

  </div>
</header>
