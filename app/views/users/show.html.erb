<div class="user__wrapper">
  <div class="user__show">
    <ul class="user__show__top">
        <li class="user__show__top__icon">
            <% if @user.image.attached? %>
              <%= image_tag @user.image, alt: "user-icon", class: "user-icon" %>
            <% else %>
              <%= image_tag "default.png", alt: "user-icon", class: "user-icon" %>
            <% end %>
        </li>
        <li class="user__show__top__content">
          <% if @user.id == current_user.id %>
            <button class="btn slide-bg"><span></span><%= link_to "プロフィール編集", edit_user_registration_path  %></button>
            <button class="btn slide-bg"><span></span><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
          <% else %>
            <%= render 'follow_form' %>
            <% if @isRoom == true %>
            <button class="btn slide-bg"><span></span><a href="/rooms/<%= @roomId %>">チャットへ</a></button>
            <% else %>
              <%= form_for @room do |f| %>
                <%= fields_for @entry do |e| %>
                  <%= e.hidden_field :user_id, :value=> @user.id %>
                <% end %>
                  <h3><%= f.submit "チャットを始める" , class: "btn"%></h3>
              <% end %>
            <% end %>
          <% end %>
        </li>
      </ul>
      <ul class="user__show__bottom">
        <li class="user__show__bottom__name">
            <h3><%= @user.name %></h3>
        </li>
        <li class="user__show__bottom__follow">
            <%= render 'shared/stats' %>
        </li>
      </ul>
      <ul class="user__show__bottom__status">
        <li class="user__show__bottom__status__experience">
          <h4>・トレーニング歴：<%= @user.experience %>年</h4>
        </li>
        <li class="user__show__bottom__status__profile">
          <h4>・プロフィール</h4>
          <p><%= @user.profile %></p>
        </li>

        <li class="user__show__bottom__status__achievement">
          <h4>・アチーブメント</h4>
          <% if @user.posts.count >= 100 %>
            投稿数100以上<i class="fas fa-medal"></i>
          <% elsif @user.posts.count >= 50%>
          　投稿数50以上<i class="fas fa-medal"></i>
          <% elsif @user.posts.count >= 1%>
            投稿数1以上<i class="fas fa-medal"></i>
          <% else %>
            投稿数なし<i class="fas fa-medal"></i>
          <% end %>
          <br />

          <% if @favorite_list.count >= 100 %>
            お気に入りされた投稿数100以上<i class="fas fa-medal"></i>
          <% elsif @favorite_list.count >= 50%>
          　お気に入りされた投稿数50以上<i class="fas fa-medal"></i>
          <% elsif @favorite_list.count >= 1%>
            お気に入りされた投稿数1以上<i class="fas fa-medal"></i>
          <% else %>
            お気に入りされた投稿数なし<i class="fas fa-medal"></i>
          <% end %>
          <br />

          <% if @user.followers.count >= 100 %>
            フォロワー数100以上<i class="fas fa-medal"></i>
          <% elsif @user.followers.count >= 50%>
          　フォロワー数50以上<i class="fas fa-medal"></i>
          <% elsif @user.followers.count >= 1%>
            フォロワー数1以上<i class="fas fa-medal"></i>
          <% else %>
            フォロワー数なし<i class="fas fa-medal"></i>
          <% end %>
          <br />
        </li>

      </ul>
    </div>

    <div class="user__show__post__index">
      <div class="tabs">
        <input id="all" type="radio" name="tab_item" checked>
        <label class="tab_item" for="all">自分の投稿</label>
        <input id="favorite" type="radio" name="tab_item">
        <label class="tab_item" for="favorite">お気に入り投稿</label>
        <div class="tab_content" id="all_content">
          <% @posts.each do |post| %>
          <li class="user__show__post__index__item">
            <div class="user__show__post__index__item__user">
              <% if post.user.image.attached? %>
                <%= image_tag post.user.image, class:"user-icon_small"%>
              <% else %>
                <%= image_tag "default.png", alt: "user-icon", class: "user-icon_small" %>
              <% end %>
              <div class="user__show__post__index__item__user__name"><%= link_to post.user.name, user_path(post.user) %></div>
              
            <h3><%=link_to post.title, post_path(post) %></h3>
            </div>
            <p><%= post.content %></p>
            <% if post.eyecatch.attached? %>
              <%= image_tag post.eyecatch, class: "post__index__item__img" %>
            <% else %>
              <%= image_tag "post-image.jpg", class: "post__index__item__img" %>
            <% end %>
            <hr>
            <%=link_to "詳細を見る", post_path(post) %>
          </li>
          <% end %>
        </div>
        <div class="tab_content" id="favorite_content">
          <% if @favorite_list.present? %>
            <% @favorite_list.each do |post| %>
              <li class="user__show__post__index__item">
                <div class="user__show__post__index__item__user">
                  <% if post.user.image.attached? %>
                    <%= image_tag post.user.image, class:"user-icon_small"%>
                  <% else %>
                    <%= image_tag "default.png", alt: "user-icon", class: "user-icon_small" %>
                  <% end %>
                  <div class="user__show__post__index__item__user__name"><%= link_to post.user.name, user_path(post.user) %></div>
                </div>
                <h3><%=link_to post.title, post_path(post) %></h3>
                <p><%= post.content %></p>
                <% if post.eyecatch.attached? %>
                  <%= image_tag post.eyecatch, class: "post__index__item__img" %>
                <% else %>
                  <%= image_tag "post-image.jpg", class: "post__index__item__img" %>
                <% end %>
                <hr>
                <%=link_to "詳細を見る", post_path(post) %>
              </li>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
</div>

<%= paginate @posts %>
