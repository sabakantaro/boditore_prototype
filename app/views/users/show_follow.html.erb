<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <li><%= link_to user.name, users_path(@user) %></li>
          <% end %>
        </div>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
      <ul class="users follow">
      </ul>
  </div>
</div>