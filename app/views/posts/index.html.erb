<div class="common_wrapper">
  <div class="post__wrapper">
    <h1>投稿一覧
    <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
      <%= f.text_field :title %>
      <%= f.submit :検索 %>
    <% end %></h1>
    <ul class="post__index">
      <% @posts.each do |post| %>
        <li class="post__index__item">
          <div class="post__index__item__user">
            <% if post.user.picture? %>
              <%= image_tag post.user.picture, class:"user-icon_small"%>
            <% else %>
              <%= image_tag "default.jpg", alt: "user-icon", class: "user-icon_small" %>
            <% end %>
            <div class="post__index__item__user__name"><%= post.user.name %>
          </div>
          <h3><%= post.title %></h3>
          <%= image_tag post.picture.url , size: "50x50", class: "post__index__item__img" if post.picture? %>
          <hr>
        <%=link_to "詳細を見る", post_path(post) %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
