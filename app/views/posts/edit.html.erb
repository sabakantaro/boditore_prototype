<div class="common_wrapper">
<h1>編集</h1>
  <%= form_for(@post, url: post_path(@post)) do |f| %>
  <p>
        <%= f.label :タイトル %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post.title}" %>
    </p>

    <p>
      <%= f.label :投稿内容 %><br>
      <%= f.text_area :content, autofocus: true, :placeholder =>"#{@post.content}" %>
    </p>
    
    
    <p>
      <%= f.label :写真 %><br>
      <%= f.file_field :image, :placeholder =>"#{@post.image}" %>
    </p>

    <p>
      <%= f.submit "投稿" %>
    </p>
  <% end %>
</div>
